<idea-plugin version="2">
  <id>com.facebook.buck.intellijplugin.BuckPlugin</id>
  <name>Buck IntelliJ Plugin</name>
  <version>0.0.1</version>
  <vendor email="code@damienallison.com" url="http://www.facebook.com/">Facebook</vendor>

  <description><![CDATA[
      The Facebook IntelliJ IDEA 14 Buck plugin supports basic run functions of
      the buck platform by integrating with different buck targets.
    ]]></description>

  <change-notes><![CDATA[
      0.0.1 : 20150119 Basic setup with reference to external compiler.<br>
      0.0.0 : 20150112 Initial Version.<br>
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="139.659" until-build="139.*"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->
  <depends>com.intellij.modules.java</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->

    <!-- External project compiler -->
    <compileServer.plugin classpath="jps-plugin.jar"/>
    <compiler.buildTargetScopeProvider implementation="com.facebook.buck.intellijplugin.buckbuilder.BuckBuildTargetScopeProvider" />
    <!-- <buildProcess.parametersProvider implementation="com.facebook.buck.intellijplugin.buckbuilder.BuckBuildParametersProvider" /> -->

    <!-- https://confluence.jetbrains.com/display/IDEADEV/IntelliJ+IDEA+Tool+Windows -->
    <toolWindow id="Buck Project"  anchor="bottom" secondary="false" factoryClass="com.facebook.buck.intellijplugin.tools.BuckToolWindow" />

    <!-- Set up the project configuration integration to allow setting of the project settings -->
    <!-- https://confluence.jetbrains.com/display/IDEADEV/Customizing+the+IDEA+Settings+Dialog -->
    <!-- https://confluence.jetbrains.com/display/IDEADEV/Persisting+State+of+Components -->
    <!-- <applicationConfigurable id="BuckProject.BuckConfiguration" instance="com.facebook.buck.intellijplugin.components.BuckConfiguration" displayName="Buck Config" /> -->
    <projectConfigurable id="BuckPlugin.BuckConfigurable"
                         instance="com.facebook.buck.intellijplugin.settings.BuckConfigurable"
                         displayName="Buck Config" parentId="project.propCompiler"/>

    <!-- TODO Consider for targets command integraion <bundledQuickListsProvider implementation="" /> -->
    <!-- TODO Consider for target scope calculation <compiler.buildTargetScopeProvider implementation="" /> -->
    <!-- TODO Consider for buck config watcher for JVM selection <buildProcess.parametersProvider implementation="" /> -->
    <!-- TODO Consider for buck compiler integration <compileServer.plugin id="BuckPlugin.BuckCompileServer" -->
    <!-- TODO Consider for compiler checker. <compiler implementation="com.facebook.buck.intellijplugin.buckprocess.BuckCompiler" id="BuckPlugin.Compiler" /> -->
    <!-- You can override a predefined service with 'override'=true to replace things like the compiler. -->

    <externalSystemManager implementation="com.facebook.buck.intellijplugin.BuckManager" />
    <!-- Along with the external manager we need to reference the the configuration type
        for the pants plugin as well as the buck runner -->
    <configurationType implementation="com.facebook.buck.intellijplugin.execution.BuckConfigurationType"/>
    <programRunner implementation="com.facebook.buck.intellijplugin.runner.BuckRunner"/>

    <!-- External service providers must be registered in order for the service
        manager to allow resolution of them at run time (unique instance) -->
    <projectService serviceImplementation="com.facebook.buck.intellijplugin.settings.BuckSettings"/>
    <projectService serviceImplementation="com.facebook.buck.intellijplugin.settings.BuckLocalSettings"/>

    <!-- Extension for the project import modal. -->
    <projectImportProvider
            implementation="com.facebook.buck.intellijplugin.wizard.BuckExternalProjectImportProvider" />
    <projectImportBuilder
            implementation="com.facebook.buck.intellijplugin.wizard.BuckExternalProjectImportBuilder" />
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
    <!-- <component>
      <implementation-class>
        com.facebook.buck.intellijplugin.components.ExternalBuckProjectConfig
      </implementation-class>
    </component> -->
    <component>
      <implementation-class>
        com.facebook.buck.intellijplugin.components.BuckConfigurationComponent
      </implementation-class>
    </component>
    <!-- As per the service documentation external services need to be named
    in a services directory of the meta inf. The services are lazy loaded.
    https://confluence.jetbrains.com/display/IDEADEV/External+Builder+API+and+Plugins
    http://docs.oracle.com/javase/6/docs/api/java/util/ServiceLoader.html
    -->
  </project-components>

  <actions>
    <!-- Editor actions http://git.jetbrains.org/?p=idea/community.git;a=blob;f=platform/platform-api/src/com/intellij/openapi/actionSystem/IdeActions.java;hb=HEAD -->
    <!-- Add your actions here -->
    <action id="BuckPlugin.BuckProjectAction"
            class="com.facebook.buck.intellijplugin.components.BuckProjectAction"
            text="Run Buck Project"
            description="Run buck project on the current module">
      <add-to-group group-id="RunMenu" anchor="before"
                    relative-to-action="RunnerActions"/>
      <keyboard-shortcut keymap="$default" first-keystroke="shift F10"/>
    </action>
  </actions>

</idea-plugin>